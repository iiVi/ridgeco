<!DOCTYPE html>
<html>
<head>
  <title>Ridgeco Properties</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<div id="main-container" class="container">
		<div class="navbar navbar-default navbar-fixed-top" style="font-size:18px; font-family:'Century Gothic',CenturyGothic,AppleGothic,sans-serif; background-color: rgba(252, 252, 252, 1)">
			<div class="container">
				<%= link_to 'RIDGECO PROPERTIES', root_path, :class => "navbar-brand", :style => "font-size:26px; color:black" %>				<button class="navbar-toggle" data-toggle="collapse" data-target=".navHeaderCollapse">
					<span class='icon-bar'></span>
					<span class='icon-bar'></span>
					<span class='icon-bar'></span>
				</button>
				<div class="collapse navbar-collapse navHeaderCollapse">
					<ul class="nav navbar-nav navbar-right" >
						<li><%= link_to 'Rentals', rentals_path %></li>
						<li><%= link_to 'Sales', sales_path %></li>
						<li><%= link_to 'Developments', developments_path %></li>
					</ul>
				</div>
			</div>
		</div>
		<div class="row" style="max-width: 100%; display:block; height: auto; margin-top: 120px; margin-left: 1px;">
			<div class="col-xs-1"></div>
			<div class="col-xs-10"><%= yield %></div>
			<div class="col-xs-1"></div>
		</div>

		<div class="navbar navbar-default navbar-fixed-bottom" style="font-size:18px; font-family:'Century Gothic',CenturyGothic,AppleGothic,sans-serif; background-color: rgba(252, 252, 252, 1)">
			<div class="container">
				<button class="navbar-toggle" data-toggle="collapse" data-target=".navHeaderCollapse">
					<span class='icon-bar'></span>
					<span class='icon-bar'></span>
					<span class='icon-bar'></span>
				</button>
				<div class="collapse navbar-collapse navHeaderCollapse">
					<ul class="nav navbar-nav" style="margin-left:436px">
						<li><%= link_to 'About', about_path, :style=>"margin-left:-90px; margin-right:90px" %></li>
						<li><%= link_to 'Team', team_path %></li>
						<li><%= link_to 'Contact', contact_path, :style=>"margin-left:90px" %></li>
					</ul>
				</div>
			</div>
		</div>

	</div>

</body>
</html>
